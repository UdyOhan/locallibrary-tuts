extends layout

block content

    h1 #{title}: #{bookInstance._id}
    p title: #{bookInstance.book.title}
  
    p Do you really want to delete this Book?

    form(method='POST')
        div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=bookInstance._id )

        button.btn.btn-primary(type='submit') Delete
    
